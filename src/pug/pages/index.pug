
extends ../layout/main
block variable
  -
    var title_page = 'Квартира 2А'
    var id_page = 'flat-page'
    var class_page = 'flat-page'
    var breadcrumbsBtn = 'filter'
    var breadcrumbsSubitem = [
      {
        label: 'About',
        link: pagesLink[0].about
      }
    ]
    var slider = [{
      img: 'slider/1.jpg',
      title: 'Власна резиденція у місті',
      url: 'about',
      linkText: 'Обрати квартиру',
    },{
      img: 'slider/1.jpg',
      title: 'Власна резиденція у місті2',
      url: 'about',
      linkText: 'Обрати квартиру',
    },{
      img: 'slider/1.jpg',
      title: 'Власна резиденція у місті3',
      url: 'about',
      linkText: 'Обрати квартиру',
    }]

block meta
  title= title_page
  meta(name='description', content='')
block head
    link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/index.bundle.js')
  script(defer src='./assets/scripts/index.js')
  script(defer src='./assets/scripts/libs.js')
  script(defer src='./assets/scripts/header.js')
  script(defer src='./assets/scripts/home.js')
block content
  //- include ../includes/breadcrumbs.pug
  section.home-section-0
    .home-slider.js-slider
        each sl in slider
            .slide.link__white
                +img(sl.img)
                .slide__content
                    .slide__title= sl.title
                    a(href= sl.url).slide__link.link
                        span= sl.linkText
                        .link__arrow
                            +svg('arrow')
    .home-slider__arrows
        .home-slider__arrow.home-slider__prev
            +svg('arrow')
        .home-slider__amount
            span.home-slider__current.js-home-slider__current
            span /
            span.home-slider__all.js-home-slider__all
        .home-slider__arrow.home-slider__next
            +svg('arrow')

    .home-scroll
        +svg('scroll')
  section.home-section-1
    .section-bg.section-bg__white-top
    .template-content.template-content--dark
        .template-content__title
            span Про
            | Bereg
            | Residence
        a(href='about').template-content__link.link
            span Перейти до розділу
            .link__arrow
                +svg('arrow')
    .section-bg.section-bg__white-bottom
    .home-bg__image.home-bg__image--right
      +img('home/1.png')
  section.home-section-2
    +img('home/2.jpg').home-section-2__img
    .home-section-2__content.all__white
        .home-section-2__title
            span Квартири <br>
            | Bereg <wbr>
            | Residence
        .home-section-2__desc
            .home-section-2__text Кажуть, що мрію потрібно візуалізувати. Переходьте до розділу і оберіть свою.
            a(href='flats').home-section-2__link.link
                span Перейти до розділу
                .link__arrow
                    +svg('arrow')
  section.home-section-3
      .home-bg__image.home-bg__image--left
          +img('home/3.png')
      .section-bg.section-bg__dark-top
      .template-content.template-content--white
          .template-content__title Тераса
          .template-content__text Зустріч світанку з кавою набуває нового сенсу, коли зустрічаєш його на власній терасі, площею 800 квадратних метрів!
          a(href='about').template-content__link.link
              span Перейти до розділу
              .link__arrow
                  +svg('arrow')
      .section-bg.section-bg__dark-bottom
  section.home-section-4
      .template-content.template-content--dark
          .template-content__title Архітектура <br>та технології
          .template-content__text Бути першими – складно, але ми впоралися. Сучасна архітектура будинку, якої ще не будували в Україні, в BEREG Residence!
          a(href='about').template-content__link.link
              span Перейти до розділу
              .link__arrow
                  +svg('arrow')
      .home-bg__image.home-bg__image--left
          +img('home/4.jpg')
  section.home-section-5
      .home-bg__image.home-bg__image--left
          +img('home/5.png')
      .section-bg.section-bg__gold-top
      .template-content.template-content--white
          .template-content__title Документи <br>комплексу
          .template-content__text Ознайомтеся з пакетом документів, що гарантують безпеку вашої інвестиції.
          a(href='about').template-content__link.link
              span Перейти до розділу
              .link__arrow
                  +svg('arrow')
      .section-bg.section-bg__gold-bottom
  section.home-section-6
    .template-content.template-content--dark
      .template-content__title Девелопер <br>проєкту
      .template-content__text Дізнайтеся більше про нас і наші реалізовані проекти.
      a(href='about').template-content__link.link
        span Перейти до розділу
        .link__arrow
          +svg('arrow')
    .home-bg__image.home-bg__image--left
      +img('home/6.jpg')
  section.home-section-7
    .home-bg__image.home-bg__image--left
      +img('home/7.png')
    .section-bg.section-bg__light-top
    .template-content.template-content--dark
      .template-content__title
        span Новини <br>
          | Bereg
          | Residence
      a(href='about').template-content__link.link
        span Перейти до розділу
        .link__arrow
          +svg('arrow')
    .section-bg.section-bg__light-bottom

block footer
  include ../includes/footer.pug

block header
  include ../includes/header.pug
